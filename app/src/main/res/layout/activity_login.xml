<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50"
        >

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />


    <TextView
        android:id="@+id/iniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar sesión"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#716E6E"
        android:layout_marginBottom="170dp"
        app:layout_constraintBottom_toTopOf="@id/horizontalGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/introduce"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Introduce el usuario"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@id/horizontalGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obligatorio"
        android:textColor="#716E6E"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toBottomOf="@id/introduce"
        app:layout_constraintStart_toStartOf="@id/introduce"
        />

    <EditText
        android:id="@+id/Password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Introduce la contraseña"
        android:layout_marginTop="160dp"
        app:layout_constraintTop_toBottomOf="@id/horizontalGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obligatorio"
        android:textColor="#716E6E"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toBottomOf="@id/Password"
        app:layout_constraintStart_toStartOf="@id/Password"
        />

    <Button
        android:id="@+id/entrar"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Entrar"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@id/Password"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="@id/verticalGuideline"/>

    <Button
        android:id="@+id/salir"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Salir"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@id/Password"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="@id/verticalGuideline"/>



</androidx.constraintlayout.widget.ConstraintLayout>