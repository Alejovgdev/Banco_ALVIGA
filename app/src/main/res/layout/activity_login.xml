<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/bitbackground">



    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="@color/black"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

    </View>




    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50"
        >

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />


    <TextView
        android:id="@+id/iniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/iniciar_sesion"
        android:textSize="20dp"
        android:textStyle="bold"

        android:layout_marginBottom="170dp"
        app:layout_constraintBottom_toTopOf="@id/horizontalGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/introduce"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="@string/introduce_el_usuario"
        android:textColorHint="#AAA6A6"
        app:layout_constraintBottom_toTopOf="@id/horizontalGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent">

    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/obligatorio"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toBottomOf="@id/introduce"
        app:layout_constraintStart_toStartOf="@id/introduce"
        />

    <EditText
        android:id="@+id/Password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/introduce_la_contrasena"
        android:textColorHint="#AAA6A6"
        android:layout_marginTop="160dp"
        app:layout_constraintTop_toBottomOf="@id/horizontalGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/obligatorio"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toBottomOf="@id/Password"
        app:layout_constraintStart_toStartOf="@id/Password"
        />

    <Button
        android:id="@+id/entrar"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:text="@string/entrar"
        android:textColor="#030923"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@id/Password"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/mygrey"
        app:layout_constraintEnd_toEndOf="@id/verticalGuideline"/>

    <Button
        android:id="@+id/salir"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:text="@string/salir"
        android:textColor="#030923"
        android:backgroundTint="@color/mygrey"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@id/Password"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="@id/verticalGuideline"/>



</androidx.constraintlayout.widget.ConstraintLayout>